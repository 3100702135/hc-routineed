.progress_box{
  position: relative;
  width:110px;
  height: 110px;  
  display: flex;  
  align-items: center;
  justify-content: center;
}
.progress_bg{
  position: absolute;
    width:110px;
  height: 110px; 
}
.progress_canvas{ 
  width:110px;
  height: 110px; 
} 
