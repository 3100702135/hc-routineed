/**personal.wxss**/
/* pages/phone/phone.wxss */
.phone-box{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-top:124rpx;
  background:rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  z-index: 111112;
  left: 0; 
}
.phone{
  background:#fff;
  border-radius:12rpx;
  width:660rpx;
  height:480rpx;
  margin: 0 auto;
  position: relative;
}
.phone-input{
  /* height: 380rpx; */
  padding: 0 30rpx;
  box-sizing: border-box;
}
.phone-input-slogan{
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  justify-content:space-between;
   align-items: center; 
   padding: 0 20rpx;
  box-sizing: border-box; 
}
.phone-input-slogan text{
  font-size:28rpx;
  color:#33adff;
}
.phone-input-slogan image{
  width: 36rpx;
}
.phone-input-number{
  position: relative;
  margin-bottom: 20rpx; 
}
.phone-input-number,.phone-input-code{
  width: 596rpx;
  border:1px solid #e6e6e6;
  border-radius:6px;
}
.verify{
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  width: 140rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  background:#33adff;
  color: #fff;
  font-size: 28rpx;
  border-radius:200rpx;
  padding:0;
}
.verify::after{
  border: none;
}
.phone-input input{
  width: 400rpx;
  height: 96rpx;
  line-height: 96rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.phone-submit{
  background:#33adff;
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size: 34rpx;
  border-radius:0 0 12rpx 12rpx;
  position: absolute;
  bottom: 0;
}
.border-on{
    border:1px solid #33adff;
}
.red{
  color: #d0011b;
}



/* 个人中心  */



.count-main {
  height: 100%;
  overflow: hidden;
  background: #f8f8f8;
}

.section {
  /* height: 100%; */
  background-color: #f8f8f8;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}

.list {
  background-color: #fff;
  margin-bottom: 40rpx;
}

.list-column {
  display: -webkit-box;
  -webkit-box-orient: horizontal;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
  border-bottom: 1px solid #fafafa;
}

.list-column-intro {
  -webkit-box-flex: 1;
}

.list-column-intro image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  vertical-align: middle;
  margin-bottom: 10rpx;
}

.list-column-intro text {
  font-size: 34rpx;
  color: #333;
}

.list-column-next image {
  width: 30rpx;
  height: 40rpx;
}

.list-column-next text {
  height: 40rpx;
  min-width: 40rpx;
  line-height: 40rpx;
  display: inline-block;
  background: #f33;
  text-align: center;
  font-size: 28rpx;
  border-radius: 50%;
  color: #fff;
  margin-right: 14rpx;
}
.list-column-intro text.list-column-intro_red {
    color: #d0021b;
    padding-left: 20rpx;
}

.list-column-next_status1 {
    background: #fff;
    border: 1rpx solid #39f;
    border-radius: 200rpx;
    width: 118rpx;
    height: 58rpx;
    margin-top: 14rpx;
    font-size: 28rpx;
    display: inline-block;
    color: #39f;
    line-height: 58rpx;
    text-align: center;
}

.list-column-next_status2, .list-column-next_status3 {
    font-size: 28rpx;
    color: #8a9199;
}